<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li class="task">
      <input type="checkbox" <%= "checked" if task.completed %> >
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to 'Delete', task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>


<%= link_to "Add a new task", tasks_new_path %>

